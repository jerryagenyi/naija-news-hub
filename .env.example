# Database Configuration
NAIJA_NEWS_DB_HOST=localhost
NAIJA_NEWS_DB_PORT=5432
NAIJA_NEWS_DB_NAME=naija_news
NAIJA_NEWS_DB_USER=postgres
NAIJA_NEWS_DB_PASSWORD=your_secure_password

# API Configuration
NAIJA_NEWS_API_HOST=0.0.0.0
NAIJA_NEWS_API_PORT=8000
NAIJA_NEWS_API_DEBUG=false
NAIJA_NEWS_API_CORS_ORIGINS=http://localhost:3000

# Crawl4AI Configuration
NAIJA_NEWS_CRAWL4AI_MAX_DEPTH=2
NAIJA_NEWS_CRAWL4AI_STREAM=true
NAIJA_NEWS_CRAWL4AI_RATE_LIMIT_REQUESTS_PER_SECOND=2
NAIJA_NEWS_CRAWL4AI_RETRY_MAX_RETRIES=3
NAIJA_NEWS_CRAWL4AI_RETRY_BACKOFF_FACTOR=2
NAIJA_NEWS_CRAWL4AI_PROXY_ROTATION=true

# LLM Configuration
NAIJA_NEWS_LLM_PROVIDER=openai
NAIJA_NEWS_LLM_API_TOKEN=your_api_token
NAIJA_NEWS_LLM_MODEL=gpt-4

# Proxy Configuration
NAIJA_NEWS_PROXY_ENABLED=true
NAIJA_NEWS_PROXY_ROTATION_INTERVAL=300
NAIJA_NEWS_PROXY_MAX_FAILURES=3
NAIJA_NEWS_PROXY_LIST=http://proxy1.example.com:8080,http://proxy2.example.com:8080

# Logging Configuration
NAIJA_NEWS_LOG_LEVEL=INFO
NAIJA_NEWS_LOG_FILE=logs/naija_news.log

# Security
NAIJA_NEWS_SECRET_KEY=your_secret_key
NAIJA_NEWS_JWT_SECRET=your_jwt_secret 